<article class="post-card">
  <header class="post-header">
    <%= link_to(users_profile_path(home_post.user.id)) do %>  
      <div class="post-image-wrapper">

        <% if home_post.user.avatar.attached? %>
          <%= image_tag url_for(home_post.user.avatar),class: "post-image" %>
        <% else %>

          <svg viewBox="0 0 16 16" class= "post-image " fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
            <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
            <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
          </svg>
        <% end %>
              
        <div class="post-owner-wrapper">
          <span class="post-owner-name">
            <%= home_post.user.username %>
          </span>
        
        </div>
      </div>
    <% end %>
    
  </header>

  <section class="post-content-wrapper" data-toggle="modal" data-target="#full_user_post" data-post-id="<%= home_post.id %>">
    <%= image_tag url_for(home_post.image) ,class: "post-content" %>
  </section>

  <section class="post-options-wrapper">
    <svg
      aria-label="Activity Feed"
      class="mr-4"
      fill="#262626"
      height="24"
      viewBox="0 0 48 48"
      width="24"
    >
      <path
        clip-rule="evenodd"
        d="M34.3 3.5C27.2 3.5 24 8.8 24 8.8s-3.2-5.3-10.3-5.3C6.4 3.5.5 9.9.5 17.8s6.1 12.4 12.2 17.8c9.2 8.2 9.8 8.9 11.3 8.9s2.1-.7 11.3-8.9c6.2-5.5 12.2-10 12.2-17.8 0-7.9-5.9-14.3-13.2-14.3zm-1 29.8c-5.4 4.8-8.3 7.5-9.3 8.1-1-.7-4.6-3.9-9.3-8.1-5.5-4.9-11.2-9-11.2-15.6 0-6.2 4.6-11.3 10.2-11.3 4.1 0 6.3 2 7.9 4.2 3.6 5.1 1.2 5.1 4.8 0 1.6-2.2 3.8-4.2 7.9-4.2 5.6 0 10.2 5.1 10.2 11.3 0 6.7-5.7 10.8-11.2 15.6z"
        fill-rule="evenodd"
      ></path>
    </svg>
    <svg aria-label="Comment" class="mr-4" fill="#262626"  height="24" viewBox="0 0 48 48"  width="24" data-toggle="modal" data-target="#full_user_post" data-post-id="<%= home_post.id %>" >
    
      <path
        clip-rule="evenodd"
        d="M47.5 46.1l-2.8-11c1.8-3.3 2.8-7.1 2.8-11.1C47.5 11 37 .5 24 .5S.5 11 .5 24 11 47.5 24 47.5c4 0 7.8-1 11.1-2.8l11 2.8c.8.2 1.6-.6 1.4-1.4zm-3-22.1c0 4-1 7-2.6 10-.2.4-.3.9-.2 1.4l2.1 8.4-8.3-2.1c-.5-.1-1-.1-1.4.2-1.8 1-5.2 2.6-10 2.6-11.4 0-20.6-9.2-20.6-20.5S12.7 3.5 24 3.5 44.5 12.7 44.5 24z"
        fill-rule="evenodd"
      ></path>
    </svg>
    <svg
      aria-label="Share Post"
      class="mr-auto"
      fill="#262626"
      height="24"
      viewBox="0 0 48 48"
      width="24"
    >
      <path
        d="M46.5 3.5h-45C.6 3.5.2 4.6.8 5.2l16 15.8 5.5 22.8c.2.9 1.4 1 1.8.3L47.4 5c.4-.7-.1-1.5-.9-1.5zm-40.1 3h33.5L19.1 18c-.4.2-.9.1-1.2-.2L6.4 6.5zm17.7 31.8l-4-16.6c-.1-.4.1-.9.5-1.1L41.5 9 24.1 38.3z"
      ></path>
      <path d="M14.7 48.4l2.9-.7"></path>
    </svg>

    <svg
      aria-label="Save"
      class="_8-yf5 "
      fill="#262626"
      height="24"
      viewBox="0 0 48 48"
      width="24"
    >
      <path
        d="M43.5 48c-.4 0-.8-.2-1.1-.4L24 29 5.6 47.6c-.4.4-1.1.6-1.6.3-.6-.2-1-.8-1-1.4v-45C3 .7 3.7 0 4.5 0h39c.8 0 1.5.7 1.5 1.5v45c0 .6-.4 1.2-.9 1.4-.2.1-.4.1-.6.1zM24 26c.8 0 1.6.3 2.2.9l15.8 16V3H6v39.9l15.8-16c.6-.6 1.4-.9 2.2-.9z"
      ></path>
    </svg>
  </section>
  <section class="post-comments-wrapper">
    <div class="post-likes">207 likes</div>
    <div class="post-comment">
      <%= link_to(users_profile_path(home_post.user.id),class: "post-comment-author") do %> 
      
        <%= home_post.user.username %>
      <% end %>
      <%= home_post.caption %>
      
    </div>
    <a href="./comments.html" class="view-all-comments"
      >View all comments</a
    >
    <div class="post-comment post_two_comment">
      
      <% home_post.comments.take(2).each do|comments| %>
        <div>
          <%= link_to(users_profile_path(comments.user.id),class: "post-comment-author") do %>
          
            <%= comments.user.username %>
          <% end %>

          <%= comments.text %>
        </div>
      <% end %>

    </div>
    
    <div class="post-created">
      <%= time_ago_in_words(home_post.created_at)%> ago
    </div>
    <div class="comment">
      
      <%= form_for Comment.new ,html: { class: "home_comment" } do |comment| %>
        
        <%= comment.text_field :text,placeholder: "Add a comment..." ,class: "add-comment", id: "addComment"+"#{home_post.id}" %>
        <%= comment.hidden_field :post_id, :value => "#{home_post.id}",id: "Comment"+"#{home_post.id}"  %>
        
        <%= comment.submit "post",class: "comment_submit" %>

      <% end %>
      
    </div>

  </section>
</article>